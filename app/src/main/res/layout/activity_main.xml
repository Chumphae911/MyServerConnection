<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cphchum9.myserverconnection.MainActivity">

    <EditText
        android:id="@+id/addBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addButt"
        android:layout_alignStart="@+id/dataView"
        android:layout_marginStart="7dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/addButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/dataView"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="26dp"
        android:text="@string/plus"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="260dp"
        tools:layout_editor_absoluteY="16dp" />

    <ListView
        android:id="@+id/dataView"
        android:layout_width="331dp"
        android:layout_height="401dp"
        android:layout_below="@+id/addBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="77dp" />
</RelativeLayout>
